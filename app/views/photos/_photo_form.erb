<span class="photo-crousel" data-no-turbolink>
	<div class="row image-outer">
		<div class="small-7 small-centered columns">
			<span class="photo-frame">
				<div class="large-slick">
					<% if @photos %>
				    <% @photos.each do |photo| %>
							<div id='large-<%= photo.id %>'>
								<%= image_tag(photo.image(:large)) %>
							</div>
						<% end %>
					<% end %>
				</div>
			</span>
			<span class="tumb-frame">
				<div class="small-slick">
					<% if @photos %>
						<% @photos.each do |photo| %>
							<div id='small-<%= photo.id %>'>
								<%= image_tag(photo.image(:thumb)) %>
								<%= link_to '', photo, method: :delete, remote: true, id: "delete-photo", data: { confirm: 'Are you sure?' } %>
								<!-- <%= content_tag "a", href: "#", id: "delete-photo" , data: {id: photo.id} do %><% end %> -->
							</div>
						<% end %>						
					<% end %>
				</div>
			</span>
			<div id="new">
				<%= render 'new_form' %> 
			</div>
		</div>
	</div>
</span>